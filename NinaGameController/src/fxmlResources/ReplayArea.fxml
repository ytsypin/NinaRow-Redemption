   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Replay" textAlignment="CENTER">
               <font>
                  <Font name="Calibri" size="41.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="replayToggleButton" mnemonicParsing="false" onAction="#activateReplay" text="Replay" textAlignment="CENTER">
